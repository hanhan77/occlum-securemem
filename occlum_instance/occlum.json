{
    "resource_limits": {
      "user_space_size": "2048MB",               // 原来是 1024MB，建议 2GB 以上
      "kernel_space_heap_size": "128MB",
      "max_num_of_threads": 64
    },
    "process": {
      "default_stack_size": "8MB",
      "default_heap_size": "512MB",              // 原来是 256MB，建议至少 512MB
      "default_mmap_size": "1024MB"              // 原来是 512MB，建议拉到 1024MB
    },
    "entry_points": ["/bin/app"],
    "fs": {
      "type": "unionfs",
      "layers": [
        {
          "target": "/",
          "type": "sefs",
          "source": "./image"
        }
      ]
    }
  }
  